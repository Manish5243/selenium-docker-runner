pipeline {
    // master executor should be set to 0
    agent any
    stages {
        stage('Start Grid') {
            steps {
                //sh
                bat "docker-compose up -d hub chrome firefox"
            }
        }
        stage('Run test') {
            steps {
                //sh
                bat "docker-compose up testng-module"
            }
        }
    }
    post{
        always{
            archiveArtifacts artifacts: 'target/output/**'
            bat "docker-compose down"
        }
    }
}
